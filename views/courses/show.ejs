<h2>Course data for <%= course.title %></h2>
<table class="table">
    <tr>
        <th>Title</th>
        <td><%= course.title %></td>
    </tr>
    <tr>
        <th>Description</th>
        <td><%= course.description %></td>
    </tr>
    <tr>
        <th>Items</th>
        <td><% course.items.forEach((item)=>{ %>
            <%= item %>
            <% }) %>
        </td>
    </tr>
    <tr>
        <th>Zip Code</th>
        <td><%= course.zipCode %></td>
    </tr>
    <tr>
        <th>Price</th>
        <td><%= course.price %></td>
    </tr>
</table>
<div>
    <a href="/courses">View all courses</a>
</div>
<div>
    <a href="<%= `/courses/${course._id}/edit` %>">Edit Course Details</a>
</div>
<div>
    <a href="<%= `/courses/${course._id}/delete?_method=DELETE` %>"
        onclick="return confirm('Are you sure you want to delete this record?')">
        Delete
    </a>
</div>