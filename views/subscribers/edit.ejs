<div class="data-form"></div>
    <form action="/subscribers/<%= `${subscriber._id}/update?_method=PUT` %>" method="POST">
        <h2>Update subscriber</h2>

        <div class="form-group">
        <label for="inputFirstName">First Name</label>
        <input type="text" name="firstName" id="inputFirstName" value="<%= `${subscriber.firstName}` %>"
         placeholder="First Name" autofocus required>
        </div>

        <div class="form-group">
        <label for="inputLastName">Last Name</label>
        <input type="text" name="lastName" id="inputLastName" value="<%= `${subscriber.lastName}` %>"
        placeholder="Last Name" autofocus required>
        </div>

        <div class="form-group">
        <label for="inputEmail">Email</label>
        <input type="email" name="email" id="inputEmail" value="<%= `${subscriber.email}` %>"
         placeholder="Email" required>
        </div>

        <div class="form-group">
            <label for="inputZipCode">Zip Code</label>
            <input type="text" name="zipCode" id="inputZipCode" value="<%= `${subscriber.zipCode}` %>"
             placeholder="Zip Code" pattern="\d*" required>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
    </form>
</div>