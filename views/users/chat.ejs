<div class="container">
    <h1>Chat</h1>
    <form id="chatForm">
        <% if(currentUser){ %>
            <input type="text" id="chat-input">
            <input type="hidden" id="chat-user-name" value="<%= `${currentUser.firstName} ${currentUser.lastName}` %>">
            <input type="hidden" id="chat-user-id" value="<%= currentUser._id %>">
            <input value="Send" type="submit">
        <% } %>
    </form>
    <div id="chat"></div>
</div>