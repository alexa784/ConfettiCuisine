<h2>User Data for <%= user.firstName %> <%= user.lastName %></h2>
<table class="table">
    <tr>
        <th>First Name</th>
        <td><%= user.firstName %></td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td><%= user.lastName %></td>
    </tr>
    <tr>
        <th>Email</th>
        <td><%= user.email %></td>
    </tr>
    <tr>
        <th>Zip Code</th>
        <td><%= user.zipCode %></td>
    </tr>
    <tr>
        <th>API Token</th>
        <td><%= user.apiToken %></td>
    </tr>
    <tr>
        <th>Password</th>
        <td><%= user.password %></td>
    </tr>
</table>
<% if(user.subscribedAccount) {%>
    <h4 class="center"> This user has a
        <a href="<%= `/subscribers/${user.subscribedAccount}` %>">subscribed account.</a>
    </h4>
<% } %>
<div>
    <a href="/users">View all users</a>
</div>
<div>
    <a href="<%= `/users/${user._id}/edit` %>">Edit User Details</a>
</div>
<div>
    <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
        onclick="return confirm('Are you sure you want to delete this record?')">
        Delete
    </a>
</div>